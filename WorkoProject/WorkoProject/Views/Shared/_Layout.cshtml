<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet">

    <link rel="icon" href="~/Content/img/favicon.png">

</head>
<body>
    <div class="se-pre-con"></div>
    <!-- Navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand navbar-left" href="/"><img src="~/Content/img/workoLogo.png" class="logo"></a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li id="loginBtn" class="menu-item"><a class="clickable">כניסה</a></li>
                    <!--<li id="registerBtn" class="menu-item"><a href="@Url.Action("Register", "Account")">הרשמה</a><span class="rbullet">&#8226</span></li><-->
                </ul>
                <!--<div id="lcircle"></div>
                <div id="rcircle"></div>-->
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <!-- /Navbar -->

    @RenderSection("header", false)

    @RenderBody();

    <!--Footer-->
    <footer class="container-fluid">
        <div class="row">
            <div class="pull-left">
                <h2 id="footerSiteName">Worko</h2>
            </div>
            <div class="pull-right"><h2 id="footerCopy"> Copyright 2015</h2></div>
        </div>
    </footer>
    <!--/Footer-->

    @if (TempData["ErrorMessgae"] != null)
    {
        @Html.Partial("Partials/_ModalMessage", (WorkoProject.Models.Message)TempData["ErrorMessgae"])
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/Cookies.js"></script>
    <script src="~/Scripts/Worko.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
