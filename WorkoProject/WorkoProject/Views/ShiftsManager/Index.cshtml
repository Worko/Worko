@{
    Layout = "~/Views/Shared/_ControlLayout.cshtml";
}


@* This is not needed because this is only for davik
 We need to think what we should display in this page *@
@if (1 == 0)
{
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators custom">
            @{
                var rootDir = Server.MapPath("~/Content/img/Carousel");
                var files = Directory.GetFiles(rootDir).Length;
                for (int i = 0; i < files; i++)
                {
                    <li data-target="#myCarousel" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                }
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/Content/img/Carousel/1.jpg" alt="img" width="460" height="345">
            </div>

            @for (int i = 1; i < files; i++)
            {
                <div class="item">
                    <img src="~/Content/img/Carousel/@(i + 1).jpg" alt="img" width="460" height="345">
                </div>
            }
        </div>

        <!-- Left and right controls -->

        <a class="left carousel-control myControl-left" href="#myCarousel" role="button" data-slide="next">
            <i class="fa fa-chevron-left" aria-hidden="true" style="margin-top: 80%;color: #292929;"></i>
            <span class="sr-only">הבא</span>
        </a>
        <a class="right carousel-control myControl-right" href="#myCarousel" role="button" data-slide="prev">
            <i class="fa fa-chevron-right" aria-hidden="true" style="margin-top: 80%;"></i>
            <span class="sr-only">הקודם</span>
        </a>
    </div>
}