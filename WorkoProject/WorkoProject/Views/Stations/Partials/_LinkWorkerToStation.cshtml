@model List<WorkoProject.Models.Worker>

<div id="worker-station-modal" class="modal fade" data-sid="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">שייך עובד לעמדה | <strong id="stationName"></strong></h4>
            </div>
            <form>
                <div class="modal-body">

                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <input type="file" id="userFilePic" name="file" accept="image/*" style="display:none" />
                            <table class="table table-hover search-table">
                                <thead>
                                    <tr>
                                        <th>&nbsp;</th>
                                        <th class="filter">שם פרטי</th>
                                        <th class="filter">שם משפחה</th>
                                        <th class="filter">תעודת זהות</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var w in Model)
                                    {
                                        <tr data-id="@w.IdNumber">
                                            <td class="worker-pic"><img src="~/@(string.IsNullOrEmpty(w.Picture) ? "Content/img/default_user.png" : w.Picture)" alt="" width="30" height="30" /></td>
                                            <td class="worker-fname field">@w.FirstName</td>
                                            <td class="worker-lname field">@w.LastName</td>
                                            <td class="worker-id field">@w.IdNumber</td>
                                            <td>
                                                <button type="button" class="btn btn-info btn-circle linkWorker">
                                                    <i class="fa fa-check"></i>
                                                </button>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-warning btn-circle unlinkWorker">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                   
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-info" data-dismiss="modal">סגור</button>
                    <span class="error-message"></span>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
